/* 发通知 */
.send_add{
  width: 100%;
  height: 200rpx;
  margin-top: 30rpx;
  background-color: #fef2e8;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.send_add image {
  width: 65rpx;
  height: 65rpx;
  margin-bottom: 30rpx;
}

.send_add text {
  font-size: 28rpx;
  color: #e1a674;
}

.send .content {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.content image {
  width: 180rpx;
  height: 250rpx;
  margin: 200rpx 0 50rpx 0;
}

.content text {
  font-size: 28rpx;
  color: #959394;
  letter-spacing: 5rpx;
}

/* 收通知 */
.receive {
  padding: 20rpx;
  margin-bottom: 100rpx;
}

.re_noti{
  width: 100%;
  margin-bottom: 20rpx;
  background-color: #f6f5f4;
  border: 1rpx solid #ccc;
}

.re_noti_content {
  display: flex;
  flex-direction: row;
}

.re_type{
  width: 20%;
  display: flex;
  justify-content: center;
}

.re_type image {
  width: 68rpx;
  height: 120rpx;
  margin-left: 5%;
}

.re_info {
  width: 80%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.re_name {
  font-size: 36rpx;
  line-height: 46rpx;
}

.re_content{
  font-size: 32rpx;
  line-height: 46rpx;
  color: #ccc;
  /* 1.0流体布局
    1.1多行文字你出点点点
    1.2从上向下垂直排列子元素
    1.3允许在单词内换行
    1.4显示省略符号来代表被修剪得文本
  */
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
}

.re_go{
  display: flex;
  align-items:center;
  justify-content: center;
}

.re_go image {
  width: 60rpx;
  height: 60rpx;
}

.re_time{
  margin-top: 20rpx;
  border-top: 1rpx solid #e9e9e9;
}

.re_time text {
  font-size: 28rpx;
  color: #959394;
  line-height: 50rpx;
  margin-left: 30rpx;
}

/* 选择通知类型 按钮 */
.bron_but{
  position: fixed;
  left: 0;
  bottom: 0;
  right: 0;
  display: flex;
  flex-direction: row;
  border-top: 1rpx solid #c8c8c5;
}

.bron_but view {
  width: 50%;
  height: 110rpx;
  display:  flex;
  flex-direction: column;
  align-items: center;
}

.bron_but image {
  width: 50rpx;
  height: 60rpx;
}

.bron_but text {
  line-height: 50rpx;
  font-size: 24rpx;
  color: #959394;
}