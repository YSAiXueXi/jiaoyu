.receive {
  padding: 20rpx;
  margin-bottom: 100rpx;
}

.re_noti{
  width: 100%;
  margin-bottom: 20rpx;
  background-color: #f6f5f4;
  border: 1rpx solid #e7e7e7;
}

.re_noti_content{
  display: flex;
  flex-direction: row;
}

.re_type{
  width: 15%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.re_type image{
  width: 68rpx;
  height: 120rpx;
  margin-left: 5%;
}

.re_info{
  width: 80%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.re_name{
  font-size: 32rpx;
  line-height: 50rpx;
}

.re_content{
  font-size: 32rpx;
  line-height: 50rpx;
  color: #959394;
  display: -webkit-box;
  -webkit-line-clamp: 1; /*允许文字溢出点点点*/
  -webkit-box-orient: vertical; /* 从上向下垂直排列子元素*/
  word-break: break-all; /* 允许换行 */
  text-overflow: ellipsis; /* 显示省略号来代替被修剪得文本*/
  overflow: hidden;
}

.re_go{
  display: flex;
  align-items: center;
  justify-content: center;
}

.re_go image {
  width: 60rpx;
  height: 60rpx;
}

.re_time{
  margin-top: 20rpx;
  border-top: 2rpx solid #eee;
}

.re_time text {
  font-size: 28rpx;
  color: #959394;
  line-height: 50rpx;
  margin-left: 30rpx;
}