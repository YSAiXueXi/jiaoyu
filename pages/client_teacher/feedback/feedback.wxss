.content text{
  font-size: 32rpx;
  color: #333;
  line-height: 100rpx;
  margin: 0 30rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1; /* 允许文字溢出点点点 */
  -webkit-box-orient: vertical; /* 从上向下垂直排列子元素 */
  word-break: break-all; /*允许在单词内换行*/
  text-overflow: ellipsis; /*显示省略符号代表被修剪得文本*/
  overflow: hidden;
}

.img image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 30rpx;
}

.active text{
  color: #0c98D8;
}

.btn{
  position: fixed;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: #0c98D8
}